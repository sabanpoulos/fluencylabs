---
/**
 * Fluency Labs — Lesson Inquiry Form (Netlify Forms)
 * Redirects to /company/thanks after successful submit.
 */
---

<form
  name="lesson-inquiry"
  method="POST"
  action="/company/thanks"
  data-netlify="true"
  netlify-honeypot="company"
  class="fl-form"
>
  <!-- Netlify requires this hidden input -->
  <input type="hidden" name="form-name" value="lesson-inquiry" />

  <!-- Honeypot field to catch bots -->
  <p class="hidden">
    <label>Company <input name="company" /></label>
  </p>

  <!-- Contact info -->
  <div class="grid">
    <label>
      Full name*
      <input type="text" name="name" autocomplete="name" required />
    </label>
    <label>
      Email*
      <input type="email" name="email" autocomplete="email" required />
    </label>
  </div>

  <!-- Lesson basics -->
  <label>
    Lesson type*
    <select name="lessonType" required>
      <option value="" disabled selected>Select lesson type</option>
      <option>1-on-1</option>
      <option>Small group</option>
    </select>
  </label>

  <label>
    Availability & time zone*
    <textarea
      name="availability"
      placeholder="e.g., Weeknights 6–9pm, Saturday mornings — Pacific Time (PT)"
      rows="3"
      required
    ></textarea>
  </label>

  <label>
    Anything else we should know?
    <textarea
      name="message"
      placeholder="Context, deadlines, focus areas, prior study, etc."
      rows="4"
    ></textarea>
  </label>

  <button type="submit" class="btn">Request a trial lesson</button>
  <p class="smallprint">* Required</p>
</form>

<style>
  .hidden { display: none; }
  .fl-form { background: var(--theme-surface-1); padding: 1.5rem; border-radius: var(--theme-shape-radius); }
  .fl-form label { display: block; font-weight: 500; margin-bottom: 0.6rem; }
  .fl-form input[type="text"],
  .fl-form input[type="email"],
  .fl-form input[type="tel"],
  .fl-form select,
  .fl-form textarea {
    width: 100%;
    margin-top: 0.35rem;
    padding: 0.7rem 0.8rem;
    border: 1px solid var(--theme-border-color, #ddd);
    border-radius: 8px;
    background: var(--theme-surface-0, #fff);
  }
  .grid { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; }
  .btn {
    margin-top: 0.75rem;
    padding: 0.85rem 1.1rem;
    border-radius: var(--theme-shape-radius);
    border: none;
    background: var(--theme-primary, #111);
    color: var(--theme-on-primary, #fff);
    cursor: pointer;
  }
  .smallprint { margin-top: 0.5rem; opacity: 0.7; font-size: 0.9rem; }
  @media (max-width: 768px) { .grid { grid-template-columns: 1fr; } }
</style>
