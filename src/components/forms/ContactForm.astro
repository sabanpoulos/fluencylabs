---
/**
 * Fluency Labs — Lesson Inquiry Form
 * Netlify Forms compatible (no server needed).
 * - Change "action" if you prefer a custom success page.
 * - To use Formspree instead, see the alt snippet below.
 */
---

<form
  name="lesson-inquiry"
  method="POST"
  action="/company/contact/success"
  data-netlify="true"
  netlify-honeypot="company"
  class="fl-form"
>
  <!-- Netlify needs this hidden input -->
  <input type="hidden" name="form-name" value="lesson-inquiry" />
  <!-- Honeypot field to catch bots -->
  <p class="hidden">
    <label>Company <input name="company" /></label>
  </p>

  <!-- Contact info -->
  <div class="grid">
    <label>
      Full name*
      <input type="text" name="name" autocomplete="name" required />
    </label>
    <label>
      Email*
      <input type="email" name="email" autocomplete="email" required />
    </label>
  </div>

  <!-- <label>
    Phone (optional)
    <input type="tel" name="phone" autocomplete="tel" />
  </label> -->

  <!-- Placement / goals -->
  <!-- <div class="grid">
    <label>
      Current level*
      <select name="level" required>
        <option value="" disabled selected>Select your level</option>
        <option>A1 — Beginner</option>
        <option>A2 — Elementary</option>
        <option>B1 — Intermediate</option>
        <option>B2 — Upper-intermediate</option>
        <option>C1 — Advanced</option>
        <option>C2 — Proficient</option>
        <option>Not sure</option>
      </select>
    </label> -->

    <label>
      Lesson type*
      <select name="lessonType" required>
        <option value="" disabled selected>Select lesson type</option>
        <option>1-on-1</option>
        <option>Small group</option>
      </select>
    </label>
  </div>

  <!-- <fieldset class="checkboxes">
    <legend>Goals (check all that apply)</legend>
    <label><input type="checkbox" name="goals" value="Conversation" /> Conversation</label>
    <label><input type="checkbox" name="goals" value="Pronunciation" /> Pronunciation</label>
    <label><input type="checkbox" name="goals" value="Grammar" /> Grammar</label>
    <label><input type="checkbox" name="goals" value="Exam prep (DELF/DALF/TEF)" /> Exam prep (DELF/DALF/TEF)</label>
    <label><input type="checkbox" name="goals" value="Business French" /> Business French</label>
  </fieldset> -->

  <label>
    Availability & time zone*
    <textarea
      name="availability"
      placeholder="e.g., Weeknights 6–9pm, Saturday mornings — Pacific Time (PT)"
      rows="3"
      required
    ></textarea>
  </label>

  <label>
    Anything else we should know?
    <textarea
      name="message"
      placeholder="Context, deadlines, focus areas, prior study, etc."
      rows="4"
    ></textarea>
  </label>

  <!-- <div class="grid">
    <label>
      How did you hear about us?
      <select name="source">
        <option value="" selected>—</option>
        <option>Google</option>
        <option>Instagram</option>
        <option>Referral</option>
        <option>University</option>
        <option>Other</option>
      </select>
    </label> -->

    <!-- <label class="agree">
      <input type="checkbox" name="consent" required />
      I agree to be contacted about lessons and accept the privacy policy.*
    </label>
  </div> -->

  <button type="submit" class="btn">Request a trial lesson</button>
  <p class="smallprint">* Required</p>
</form>

<style>
  .hidden { display: none; }
  .fl-form { background: var(--theme-surface-1); padding: 1.5rem; border-radius: var(--theme-shape-radius); }
  .fl-form label { display: block; font-weight: 500; margin-bottom: 0.6rem; }
  .fl-form input[type="text"],
  .fl-form input[type="email"],
  .fl-form input[type="tel"],
  .fl-form select,
  .fl-form textarea {
    width: 100%;
    margin-top: 0.35rem;
    padding: 0.7rem 0.8rem;
    border: 1px solid var(--theme-border-color, #ddd);
    border-radius: 8px;
    background: var(--theme-surface-0, #fff);
  }
  .grid { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; }
  .checkboxes { border: none; padding: 0; margin: 0.75rem 0; }
  .checkboxes legend { font-weight: 600; margin-bottom: 0.5rem; }
  .checkboxes label { display: inline-flex; align-items: center; gap: 0.5rem; margin-right: 1rem; margin-bottom: 0.5rem; }
  .agree { display: flex; align-items: center; gap: 0.6rem; margin-top: 0.4rem; }
  .btn {
    margin-top: 0.75rem;
    padding: 0.85rem 1.1rem;
    border-radius: var(--theme-shape-radius);
    border: none;
    background: var(--theme-primary, #111);
    color: var(--theme-on-primary, #fff);
    cursor: pointer;
  }
  .smallprint { margin-top: 0.5rem; opacity: 0.7; font-size: 0.9rem; }

  @media (max-width: 768px) { .grid { grid-template-columns: 1fr; } }
</style>

