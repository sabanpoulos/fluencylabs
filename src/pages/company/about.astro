---
import Layout from '../../layouts/Page.astro';
import { Container, Button } from '@components/odyssey-theme';
import TextAndImageHero from '../../components/sections/heros/TextAndImageHero.astro';

const seo = {
  title: 'About — Fluency Labs',
  description:
    'Fluency Labs is a French tutoring studio led by Saban Contandriopoulos. Conversation-first coaching for real-world confidence, online or in Victoria, BC.',
};
---

<Layout seo={seo}>
  <Container>
    <!-- HERO -->
    <TextAndImageHero reversed>
      <div slot="text-container">
        <h1>About Fluency Labs</h1>
        <p class="lead">
          Fluency Labs is a French tutoring studio led by <strong>Saban Contandriopoulos</strong>,
          a bilingual (FR/EN) instructor specializing in conversation-first coaching. We help learners
          speak naturally—with clear pronunciation, confident delivery, and cultural ease.
        </p>
      </div>

      <div slot="btns-container">
        <!-- <Button href="/company/contact">Get Started</Button> -->
      </div>

      <picture slot="image-container">
        <!-- Swap this for your own image, e.g. /assets/images/about-portrait.jpg -->
        <!-- <img
          src="/assets/images/landing-1/landing-hero-1.jpg"
          alt="Saban Contandriopoulos, founder and lead instructor at Fluency Labs"
          loading="lazy"
        /> -->
        <img src="/assets/images/about-portrait.jpg" alt="Saban Contandriopoulos, founder and lead instructor at Fluency Labs" loading="lazy" />

      </picture>
    </TextAndImageHero>

    <!-- WHO WE ARE -->
    <!-- <section class="card"> -->
      <h2>Who We Are</h2>
      <p>
        Founded by Saban, Fluency Labs pairs a rigorous, structured approach with friendly,
        real-world practice. With experience across Canada and France, we make progress measurable and sessions enjoyable.
      </p>
    <!-- </section> -->

    <!-- HOW WE TEACH -->
    <section class="card">
      <h2>How We Teach</h2>
      <ul class="checks">
        <li><strong>Conversation-first</strong> sessions with tailored prompts & role-plays</li>
        <li><strong>Pronunciation & listening</strong> drills to build speed and clarity</li>
        <li><strong>Micro-grammar</strong> feedback you can use immediately</li>
        <li><strong>Cultural cues</strong> & etiquette for natural, confident French</li>
      </ul>
    </section>

    <!-- WHO IT'S FOR -->
    <!-- <section class="card"> -->
      <h2>Who It’s For</h2>
      <p>
        Adults and students from beginner (A1) to advanced (C2). Lessons available online, 1-on-1 or small group.
      </p>
    <!-- </section> -->

    <!-- CTA -->
    <section class="closing">
      <!-- <Button href="/company/contact">Get Started</Button> -->
    </section>
  </Container>
</Layout>

<style>
  .lead {
    max-width: 780px;
    line-height: 1.6;
    margin-top: .5rem;
  }

  .card {
    background: var(--theme-surface-1);
    color: var(--theme-on-surface-1);
    padding: 1.25rem 1.5rem;
    border-radius: var(--theme-shape-radius);
    margin: calc(var(--section-margin) * 0.7) auto;
  }

  .checks { list-style: none; padding: 0; margin: .5rem 0 0; }
  .checks li { position: relative; padding-left: 1.6rem; margin: .4rem 0; }
  .checks li::before {
    content: '✓';
    position: absolute; left: 0; top: 0; transform: translateY(2px);
  }

  .closing { text-align: center; margin: var(--section-margin) auto; }
</style>
