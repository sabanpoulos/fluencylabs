---
import ContactForm from '../../components/forms/ContactForm.astro';
import Layout from '../../layouts/Page.astro';
import { Container } from '@components/odyssey-theme';

const seo = {
  title: 'Contact | Fluency Labs',
  description: 'Start your French lessons with Fluency Labs. Tell us about your goals and availability.',
};
---

<Layout seo={seo}>
  <Container>
    <section class="contact-hero__section">
      <div class="contact-hero__text-section">
        <h1>Start your lessons</h1>
        <p>
          Tell us about your goals and schedule. We'll reply within 24 hours with a personalized recommendation and help you book your trial lesson.
        </p>

        
      </div>

      <div class="col-2__container">
        <ContactForm />
      </div>
    </section>
  </Container>
</Layout>

<style>
  .contact-hero__section {
    margin: var(--section-margin) auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: calc(90vh - var(--navbar-height));
    gap: 3rem;
  }
  .contact-hero__text-section {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: var(--theme-surface-1);
    border-radius: var(--theme-shape-radius);
  }
  .contact-highlights {
    margin: 1rem 0 0.75rem 1.25rem;
    line-height: 1.6;
  }
  .contact-direct { margin-top: 0.5rem; }

  .col-2__container {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  @media (max-width: 768px) {
    .contact-hero__section { grid-template-columns: 1fr; }
  }
</style>
